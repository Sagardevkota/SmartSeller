<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.orders.fragments.innerFragments.OrderDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="100dp"

        >



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivProductImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"

                android:src="@color/cardview_dark_background"/>



            </RelativeLayout>
            <TextView
                android:id="@+id/tvProduct_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CyberPunk 2077"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/Black"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8F8"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
               />

            <TextView
                android:id="@+id/tvQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number"
                android:textSize="18sp"
                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qty"
                android:textColor="@color/Black"
                android:fontFamily="sans-serif-thin"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8F8"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs."

                android:textSize="18sp"
                android:textColor="#ff00"
                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/Black"
                android:fontFamily="sans-serif-thin"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8F8"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/tvOrderedUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"

                android:textSize="18sp"
                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ordered By"
                android:textColor="@color/Black"
                android:fontFamily="sans-serif-thin"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8F8"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/tvOrderedContactNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="18sp"
                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact number"
                android:textColor="@color/Black"
                android:fontFamily="sans-serif-thin"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8F8"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/tvOrderedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ordered Date"
                android:textColor="@color/Black"
                android:fontFamily="sans-serif-thin"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8F8"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/tvDeliveryAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="18sp"
                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery Address"
                android:textColor="@color/Black"
                android:fontFamily="sans-serif-thin"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8F8"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/tvproductSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textSize="18sp"


                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Size"
                android:textColor="@color/Black"
                android:fontFamily="sans-serif-thin"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8F8"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/tvProductColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textSize="18sp"

                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Color"
                android:textColor="@color/Black"
                android:fontFamily="sans-serif-thin"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8F8"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waiting"
                android:layout_marginTop="10dp"
                android:textSize="18sp"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="@color/Black"
                android:fontFamily="sans-serif-thin"
                />
                <TextView
                    android:id="@+id/tvChangeStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="Change"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8F8"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/tvDeliveredDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivered Date"
                    android:textColor="@color/Black"
                    android:fontFamily="sans-serif-thin"
                    />
                <TextView
                    android:id="@+id/tvChangeDeliveredDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="Change"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F8F8"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />



        </LinearLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>