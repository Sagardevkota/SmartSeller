<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".ui.home.AccountFragment.Account">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:padding="16dp"
     android:background="@color/White"
     >

     <ImageView
         android:layout_width="match_parent"
         android:layout_height="100dp"
         android:src="@drawable/ic_account_circle_24px"
         android:tint="@color/colorGray"
         />

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">



     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"

         android:text="Account Details"
         android:textSize="22sp"

         android:textAlignment="center"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="20dp"/>

         <ImageView
             android:id="@+id/ivEdit"
             android:layout_width="24dp"
             android:layout_height="24dp"
             android:tint="@color/Black"
             android:src="@drawable/ic_baseline_edit_24"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             />

     </RelativeLayout>
     <TextView
         android:id="@+id/tvUserName"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Smart Seller Name"
         android:textColor="@color/Black"
         android:drawableStart="@drawable/ic_male"
        android:drawablePadding="20dp"
         android:drawableTint="@color/colorPrimary"
         />
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Name"
         android:layout_marginStart="50dp"
         android:textColor="@color/colorGray"
         />

     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#F8F8F8"
         android:layout_marginTop="5dp"
         android:layout_marginBottom="5dp"/>

     <TextView
         android:id="@+id/tvPhone"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="0123456789"
         android:textColor="@color/Black"
         android:drawableStart="@drawable/ic_phone_android_24"
         android:drawablePadding="20dp"
         android:drawableTint="@color/colorPrimary"

         />
     <TextView

         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Mobile"
         android:layout_marginStart="50dp"
         android:textColor="@color/colorGray"
         />



     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#F8F8F8"
         android:layout_marginTop="5dp"
         android:layout_marginBottom="5dp"/>

     <TextView
         android:id="@+id/tvAddress"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Address"
         android:textColor="@color/Black"
         android:drawableStart="@drawable/ic_baseline_location_on_24"
         android:drawablePadding="20dp"
         android:drawableTint="@color/colorPrimary"

         />
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Address"
         android:layout_marginStart="50dp"
         android:textColor="@color/colorGray"
         />



     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#F8F8F8"
         android:layout_marginTop="5dp"
         android:layout_marginBottom="5dp"/>

     <TextView
         android:id="@+id/tvAccountType"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="SELLER"
         android:textColor="@color/Black"
         android:drawableStart="@drawable/ic_account_circle_24px"
         android:drawablePadding="20dp"
         android:drawableTint="@color/colorPrimary"

         />
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Account Type"
         android:layout_marginStart="50dp"
         android:textColor="@color/colorGray"
         />



     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#F8F8F8"
         android:layout_marginTop="5dp"
         android:layout_marginBottom="5dp"/>






 </LinearLayout>

</androidx.core.widget.NestedScrollView>