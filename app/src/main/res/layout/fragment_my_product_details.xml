<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.MyProductFragment.MyProductDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="100dp"

        >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/profileToolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:elevation="1dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Products"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_back_24"


                    app:tint="@color/colorPrimaryDark" />


                <TextView
                    android:id="@+id/tvProductTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="80dp"
                    android:maxLines="1"
                    android:text="My Products"
                    android:layout_marginStart="30dp"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-condensed-medium"

                    />


                <TextView
                    android:id="@+id/btnEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="50dp"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"

                    android:text="Edit"/>

                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_delete_24"
                    android:layout_marginEnd="5dp"
                    app:tint="@color/colorPrimaryDark" />





            </RelativeLayout>

        </com.google.android.material.appbar.MaterialToolbar>




   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="16dp"
       >



       <ImageView
           android:id="@+id/ivProductImage"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:layout_gravity="center"

           android:src="@color/cardview_dark_background"/>

       <TextView
           android:id="@+id/tvProduct_Name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="CyberPunk 2077"
           android:layout_marginTop="10dp"
           android:fontFamily="sans-serif-black"
           android:textColor="@color/Black"
           android:textStyle="bold"
           android:textSize="22sp"
           />

       <TextView

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:fontFamily="@font/roboto_slab_light"
           android:textColor="@color/cardview_dark_background"

           android:text="Product Name"
            />



       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#F8F8F8"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           />

       <TextView
           android:id="@+id/tvDesc"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:fontFamily="sans-serif-thin"

           android:text="Newly Released game"
           android:textColor="@color/Black"


           android:textSize="16sp"
           android:textStyle="bold" />
       <TextView

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Product Description"
           android:fontFamily="sans-serif-light"


           />



       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#F8F8F8"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           />

       <TextView
           android:id="@+id/tvPrice"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Rs.200"

           android:layout_marginTop="10dp"
           android:fontFamily="sans-serif-thin"
           android:textStyle="bold"
           android:textSize="18sp"
           android:textColor="#ff00"
           />
       <TextView

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Price"
           android:fontFamily="sans-serif-light"

           />



       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#F8F8F8"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           />

       <TextView
           android:id="@+id/tvDiscount"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Discount"
           android:fontFamily="sans-serif-thin"
           android:textColor="@color/Black"
           android:textStyle="bold"
           android:layout_marginTop="10dp"
           android:textSize="18sp"
           />
       <TextView

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Discount"
           android:fontFamily="sans-serif-light"


           />

       <com.google.android.material.chip.ChipGroup
           android:id="@+id/colorChipGroup"
           android:layout_width="match_parent"
           app:chipSpacingVertical="2dp"
           android:layout_height="wrap_content"
           app:singleSelection="true"
           />
       <TextView

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Color"
           android:fontFamily="sans-serif-light"

           />



       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#F8F8F8"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           />


       <com.google.android.material.chip.ChipGroup
           android:id="@+id/sizeChipGroup"
           android:layout_width="match_parent"
           app:chipSpacingVertical="2dp"
           android:layout_height="wrap_content"
           app:singleSelection="true"
           />
       <TextView

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Size"
           android:fontFamily="sans-serif-light"

           />



       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#F8F8F8"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           />




       <TextView
           android:id="@+id/tvBrand"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="BrandName"
           android:layout_marginTop="10dp"
           android:textColor="@color/Black"

           android:textSize="18sp"
           android:fontFamily="sans-serif-thin"
           android:textStyle="bold"

           />
       <TextView

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Brand"
           android:fontFamily="sans-serif-light"

           />



       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#F8F8F8"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           />

       <TextView
           android:id="@+id/tvSku"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="201150150"
           android:textColor="@color/Black"

           android:layout_marginTop="10dp"
           android:textSize="18sp"
           android:fontFamily="sans-serif-thin"
           android:textStyle="bold"

           />
       <TextView

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="SKU"
           android:fontFamily="sans-serif-light"


           />



       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#F8F8F8"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           />

       <TextView
           android:id="@+id/tvType"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Software"
           android:layout_marginTop="10dp"
           android:textColor="@color/Black"
           android:textStyle="bold"

           android:textSize="18sp"
           android:fontFamily="sans-serif-thin"

           />
       <TextView

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Type"
           android:fontFamily="sans-serif-thin"


           />



       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#F8F8F8"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           />

       <TextView
           android:id="@+id/tvCategory"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Games"
           android:layout_marginTop="10dp"

           android:textSize="18sp"
           android:fontFamily="sans-serif-thin"
           android:textStyle="bold"
           android:textColor="@color/Black"

           />
       <TextView

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Category"
           android:fontFamily="sans-serif-light"

           />



       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#F8F8F8"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           />

       <TextView
           android:id="@+id/tvStock"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Games"
           android:layout_marginTop="10dp"

           android:textSize="18sp"
           android:fontFamily="sans-serif-thin"
           android:textStyle="bold"
           android:textColor="@color/Black"
           />
       <TextView

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Stock"
           android:fontFamily="sans-serif-light"

           />



       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#F8F8F8"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           />




   </LinearLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>