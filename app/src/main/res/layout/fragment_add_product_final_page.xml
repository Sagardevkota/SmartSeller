<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.AddProductFragment.addProductFinalPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OPTIONAL INFROMATIONS"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:textColor="@color/colorPrimary"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="20dp"

        android:layout_height="4dp"
        android:background="@color/colorPrimary"/>





     <com.google.android.material.textfield.TextInputLayout xmlns:app="http://schemas.android.com/apk/res-auto"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
         android:background="#fff"
         app:placeholderTextColor="#000"
         app:counterEnabled="true"
         app:counterMaxLength="20"
         app:errorEnabled="true">

         <androidx.appcompat.widget.AppCompatEditText
             android:id="@+id/etColor"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             android:gravity="start"
             android:textColor="#000"
             app:passwordToggleTint="@color/colorPrimary"
             android:hint="Enter color variants"
             android:textSize="12sp"

             android:inputType="text"
             android:maxLines="2"
             android:maxLength="20"


             />

     </com.google.android.material.textfield.TextInputLayout>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="12sp"
         android:textColor="@color/colorGray"
         android:text="Please enter colors separated by comma(Example: red,blue) \n Note: It is optional"/>



     <com.google.android.material.textfield.TextInputLayout xmlns:app="http://schemas.android.com/apk/res-auto"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
         android:background="#fff"
         app:placeholderTextColor="#000"
         app:counterEnabled="true"
         app:counterMaxLength="20"
         android:layout_marginTop="10dp"
         app:errorEnabled="true">

         <androidx.appcompat.widget.AppCompatEditText
             android:id="@+id/etSize"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             android:gravity="start"
             android:textColor="#000"
             app:passwordToggleTint="@color/colorPrimary"
             android:hint="Enter size variants"
             android:textSize="12sp"

             android:inputType="text"
             android:maxLines="2"
             android:maxLength="20"



             />


     </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorGray"
            android:text="Please enter sizes separated by comma(Example: 39,41) \n Note: It is optional"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"

            android:layout_marginTop="20dp"
            android:text="Note: You can edit,modify or delete products later"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="20dp"
            >


            <TextView
                android:id="@+id/tvPrevious"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Previous"
                android:textAlignment="center"
                android:layout_weight="0.5"
                android:textSize="18sp"
                android:textColor="#B22222"/>



            <TextView
                android:id="@+id/tvNext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="18sp"
                android:layout_weight="0.5"
                android:textAlignment="center"
                android:textColor="#006400"/>

        </LinearLayout>




</LinearLayout>

</androidx.core.widget.NestedScrollView>
