<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.home.AddProductFragment.addProduct">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:orientation="vertical"
        android:layout_marginBottom="50dp"
        >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BASIC INFORMATION"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <View
        android:layout_width="50dp"
        android:layout_height="4dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"/>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >
            <com.google.android.material.textfield.TextInputLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                app:counterEnabled="true"
                app:counterMaxLength="100"
                android:hint="Product Name"

                app:errorEnabled="true"
                app:placeholderTextColor="#000">

                <androidx.appcompat.widget.AppCompatEditText xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/etProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:gravity="start"

                    android:maxLength="100"
                    android:maxLines="1"
                    android:textColor="#000"
                    app:passwordToggleTint="@color/colorPrimary" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout

                xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="350"
                android:hint="Product Description"
                app:errorEnabled="true">

                <androidx.appcompat.widget.AppCompatEditText xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/etProductDesc"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:drawablePadding="10dp"
                    android:gravity="start"

                    android:maxLength="350"

                    android:textColor="#000"


                    app:passwordToggleTint="@color/colorPrimary" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                app:counterEnabled="true"
                app:counterMaxLength="6"
                app:errorEnabled="true"
                android:hint="Price"
                app:placeholderTextColor="#000">

                <androidx.appcompat.widget.AppCompatEditText xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/etPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:gravity="start"

                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:textColor="#000"
                    app:passwordToggleTint="@color/colorPrimary"


                    />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/placeholder"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"

                />

            <Button
                android:id="@+id/btnSelectImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableTint="@color/White"
                android:text="Select Image "
                android:textSize="12sp"


                />

            <TextView
                android:id="@+id/tvNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="NEXT>>"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />


        </LinearLayout>


    </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>